<!-- views/review.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Review Invoice Data</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="mode-toggle">
    <button id="toggleMode">🌙/☀️</button>
  </div>
  <div id="statusAlert" class="status-alert" style="display:none;"></div>
  <div class="container">
    <div class="section section-form">
      <h2>Review & Edit Invoice</h2>
      <form id="invoiceForm">
        <label>Invoice Number*<input type="text" name="invoiceNumber" id="invoiceNumber" required value="<%= invoice && invoice.invoiceNumber ? invoice.invoiceNumber : '' %>"></label>
        <label>Client Name*<input type="text" name="clientName" id="clientName" required value="<%= invoice && invoice.clientName ? invoice.clientName : '' %>"></label>
        <label>Property Address*<textarea name="propertyAddress" id="propertyAddress" required><%= invoice && invoice.propertyAddress ? invoice.propertyAddress : '' %></textarea></label>
        <label>Amount*<input type="number" name="amount" id="amount" required min="0" step="0.01" value="<%= invoice && invoice.amount ? invoice.amount : '' %>"></label>
        <label>Date*<input type="date" name="date" id="date" required value="<%= invoice && invoice.date ? invoice.date : '' %>"></label>
        <label>Service Description<textarea name="serviceDescription" id="serviceDescription"><%= invoice && invoice.serviceDescription ? invoice.serviceDescription : '' %></textarea></label>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
  <script src="/js/main.js"></script>
</body>
</html> 